@model ContactViewModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>Contact Me</h1>
                    <span class="subheading">Have questions? I have answers.</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>

            <form asp-controller="Home" asp-action="Contact" enctype="multipart/form-data" method="post"
                  name="sentMessage" id="contactForm">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="ContactFullName">Name</label>
                        <input asp-for="ContactFullName" class="form-control" placeholder="Name">
                        <p class="help-block text-danger">@Html.ValidationMessageFor(model => model.ContactFullName)</p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="ContactEmail">Email Address</label>
                        <input asp-for="ContactEmail" class="form-control" placeholder="Email Address">
                        <p class="help-block text-danger">@Html.ValidationMessageFor(model => model.ContactEmail)</p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label asp-for="ContactNumber">Phone Number</label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="Phone Number">
                        <p class="help-block text-danger">@Html.ValidationMessageFor(model => model.ContactNumber)</p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Message">Message</label>
                        <textarea asp-for="Message" rows="5" class="form-control" placeholder="Message"></textarea>
                        <p class="help-block text-danger">@Html.ValidationMessageFor(model => model.Message)</p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
            </form>
        </div>
    </div>
</div>

<hr>

@section Scripts{
    
    <script src="~/js/jqBootstrapValidation.js"></script>
}