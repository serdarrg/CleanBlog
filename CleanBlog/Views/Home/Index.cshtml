@model HomeBlogListView

    <header class="masthead" style="background-image: url('/img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @foreach (var blogPost in Model.Blogs)
                {
                    <div class="post-preview">
                        <a href="@Url.Action("Detail","Home",new { blogPostId = blogPost.BlogPostId })">
                            <h2 class="post-title">
                                @blogPost.Title
                            </h2>
                            <h3 class="post-subtitle">
                                @(blogPost.Content.Length >= 20 ? Html.Raw(blogPost.Content.Substring(0,20)) : Html.Raw(blogPost.Content))
                            </h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#">@blogPost.Author.FullName</a>
                            on @blogPost.CreationDate.ToString("MMMM dd, yyyy")
                        </p>
                    </div>
                    <hr>
                }

                <!-- Pager -->
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                </div>
            </div>
        </div>
    </div>
